@model Order


<div class="row">
	<div class="col-md-12">
		<p>
			<h4> Details about your order </h4>
		</p>
		<table class="table">
			<thead>
				<tr>
					<th>Address</th>
					<th>City</th>
					<th>County</th>
					<th>Zipcode</th>
					<th>Phone number</th>
					<th>Total</th>
					@if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
					{
						<th>Actions</th>
					}
				</tr>
			</thead>
			<tbody>
				<tr>
					<td class="align-middle">
						<div class="alert alert-info" role="alert">
							<span class="badge bg-success">@Model.Address</span>
						</div>
					</td>
					<td class="align-middle">
						<div class="alert alert-info" role="alert">
							<span class="badge bg-success">@Model.City</span>
						</div>
					</td>
					<td class="align-middle">
						<div class="alert alert-info" role="alert">
							<span class="badge bg-success">@Model.County</span>
						</div>
					</td>
					<td class="align-middle">
						<div class="alert alert-info" role="alert">
							<span class="badge bg-success">@Model.Zipcode</span>
						</div>
					</td>
					<td class="align-middle">
						<div class="alert alert-info" role="alert">
							<span class="badge bg-success">@Model.PhoneNumber</span>
						</div>
					</td>
						
					<td class ="align-middle">
						<div class="alert alert-info" role="alert">
							<span class="badge bg-success">@Model.Total</span>
						</div>
					</td>
					@if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
					{
						<td class="align-middle">
							<a class="btn btn-danger" asp-controller="Orders" asp-action="ConfirmOrder" asp-route-id="@Model.Id"><i class="bi bi-trash"></i> Confirm order </a>
						</td>
					}
				</tr>
			</tbody>
		</table>
	</div>
</div>