@model Producer

@{
	ViewData["Title"] = "Producer";
}



<div class="row text">
	<div class="col-md-8 offset-2">
		<p>
			<h4>Details for @Model.FullName</h4>
		</p>
		<div class="row">
			<div class="col-md-8 offset-2">
					<div class="form-group text-center">
						<img id="ImageURLPreview" class="border-info rounded-circle" style="max-width: 150px;"/>
					</div>
					<div class="form-group">
						<img src="@Model.ProfilePictureURL" class="border-info rounded-circle" style="max-width: 150px;" />
					<span asp-validation-for="ProfilePictureURL" class="text-danger"></span>
					</div>
				<div class="form-group">
					<label asp-for="FullName" class="control-label"></label>
					<input asp-for="FullName" class="form-control" read only/>
					<span asp-validation-for="FullName" class="text-danger"></span>
				</div>
				<div class="form-group">
					<label asp-for="ProfileBio" class="control-label"></label>
					<input asp-for="ProfileBio" class="form-control" readonly/>
					<span asp-validation-for="ProfileBio" class="text-danger"></span>
				</div>
				<br />
				@if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
				{
					<div class=form-group>
						<a class="btn btn-outline-success float-right" asp-action="Edit" asp-route-id="@Model.Id"> Edit </a> 
					</div>
				}
				<a class="btn btn-outline-secondary" asp-action="Index">Show all</a>
			</div>
		</div>
	</div>
</div>